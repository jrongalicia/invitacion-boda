datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"

}

model Rsvp {
  id        String   @id @default(cuid())
  name      String
  attending Boolean
  attendees Int      @default(1)
  note      String?  @db.Text
  createdAt DateTime @default(now())
}
